{
  "name": "OpenMower-GUI DevContainer",
  "build": {
    "dockerfile": "Dockerfile",
    "context": "..",
    "args": {
      "VARIANT": "18-bullseye"  // Ex: Choix d'une version sp√©cifique pour Node.js
    }
  },
  "forwardPorts": [
    5173,  // Vite.js (frontend)
    1883,  // MQTT
    4006   // API Backend
  ],
  "remoteUser": "node",
  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "18"
    },
    "ghcr.io/devcontainers/features/docker-in-docker:1": {}
  },
  "customizations": {
    "vscode": {
      "settings": {
        "editor.tabSize": 2,
        "editor.formatOnSave": true,
        "terminal.integrated.defaultProfile.linux": "bash"
      },
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "golang.go",
        "ms-vscode.vscode-typescript-next"
      ]
    },
    "jetbrains": {
      "backend": "WebStorm"
    }
  },
  "postCreateCommand": "npm install -g bun && bun install --frozen-lockfile",
  "mounts": [
    "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind"
  ]
}
